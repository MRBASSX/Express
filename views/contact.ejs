 <body>
   <!-- create nice sports contact page -->
  <header>
    <div class="container">
      <h1>SportsZone</h1>
      <nav>
    
          <a href="/">Home</a>
        <a href="/news">News</a>
        <a href="/scores">Scores</a>
        <a href="/teams">Teams</a>
     <a href="/contact" class="active">Contact</a>
      
      </nav>
    </div>
  </header>
  <main>
    <section class="contact-hero">
      <div class="container">
        <h2>Contact Us</h2>
        <p>Have a question, suggestion, or just want to say hello? Weâ€™d love to hear from you!</p>
      </div>
    </section>
    <section class="contact-section container">
      <div class="contact-info">
        <h3>Get in Touch</h3>
        <ul>
          <li><strong>Email:</strong> support@sportszone.com</li>
          <li><strong>Phone:</strong> +1-234-567-8901</li>
          <li><strong>Address:</strong> 123 Sports Avenue, Cityville, Country</li>
        </ul>
        <div class="social">
          <a href="#" title="Follow us on Twitter"><img src="https://cdn.jsdelivr.net/gh/simple-icons/simple-icons/icons/x.svg" alt="Twitter" /></a>
          <a href="#" title="Follow us on Facebook"><img src="https://cdn.jsdelivr.net/gh/simple-icons/simple-icons/icons/facebook.svg" alt="Facebook" /></a>
          <a href="#" title="Follow us on Instagram"><img src="https://cdn.jsdelivr.net/gh/simple-icons/simple-icons/icons/instagram.svg" alt="Instagram" /></a>
        </div>
      </div>
      <form class="contact-form">
        <h3>Send a Message</h3>
        <label for="name">Your Name</label>
        <input type="text" id="name" name="name" placeholder="Enter your name" required>
        
        <label for="email">Your Email</label>
        <input type="email" id="email" name="email" placeholder="Enter your email" required>
        
        <label for="subject">Subject</label>
        <input type="text" id="subject" name="subject" placeholder="Subject" required>
        
        <label for="message">Message</label>
        <textarea id="message" name="message" rows="5" placeholder="Type your message..." required></textarea>
        
        <button type="submit">Send Message</button>
      </form>
    </section>
  </main>
