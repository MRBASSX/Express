<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Sports Scores</title>
  <link rel="stylesheet" href="/stylesheets/sports-scores.css" />
</head>
<body>
  <header>
    <div class="container">
      <h1>SportsZone</h1>
      <nav>
        <a href="/">Home</a>
        <a href="/news">News</a>
        <a href="/scores" class="active">Scores</a>
        <a href="/teams">Teams</a>
        <a href="/contact">Contact</a>
      </nav>
    </div>
  </header>
  <main>
    <section class="scores-hero">
      <div class="container">
        <h2>Live & Recent Scores</h2>
        <p>Stay updated with the latest results and ongoing matches</p>
      </div>
    </section>
    <section class="scores-board container">
      <div class="scores-tabs">
        <button class="tab active" onclick="showTab(event, 'football')">Football</button>
        <button class="tab" onclick="showTab(event, 'basketball')">Basketball</button>
        <button class="tab" onclick="showTab(event, 'cricket')">Cricket</button>
      </div>
      <div class="scores-content">
        <div class="scores-table" id="football">
          <h3>Football Scores</h3>
          <table>
            <thead>
              <tr><th>Match</th><th>Score</th><th>Status</th></tr>
            </thead>
            <tbody>
              <tr>
                <td>Team A vs Team B</td>
                <td>2 - 1</td>
                <td>Full Time</td>
              </tr>
              <tr>
                <td>Team C vs Team D</td>
                <td>1 - 3</td>
                <td>Full Time</td>
              </tr>
              <tr>
                <td>Team E vs Team F</td>
                <td>0 - 0</td>
                <td>Half Time</td>
              </tr>
              <tr>
                <td>Team G vs Team H</td>
                <td>Live: 1 - 2</td>
                <td>60'</td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="scores-table" id="basketball" style="display:none;">
          <h3>Basketball Scores</h3>
          <table>
            <thead>
              <tr><th>Match</th><th>Score</th><th>Status</th></tr>
            </thead>
            <tbody>
              <tr>
                <td>Hoopers vs Dunkers</td>
                <td>98 - 101</td>
                <td>Full Time</td>
              </tr>
              <tr>
                <td>Fastbreakers vs Shooters</td>
                <td>87 - 79</td>
                <td>4th Qtr</td>
              </tr>
              <tr>
                <td>Defenders vs Blazers</td>
                <td>55 - 45</td>
                <td>2nd Qtr</td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="scores-table" id="cricket" style="display:none;">
          <h3>Cricket Scores</h3>
          <table>
            <thead>
              <tr><th>Match</th><th>Score</th><th>Status</th></tr>
            </thead>
            <tbody>
              <tr>
                <td>Strikers vs Smashers</td>
                <td>232/7 (50)</td>
                <td>Innings Break</td>
              </tr>
              <tr>
                <td>Warriors vs Kings</td>
                <td>180/4 (35.2)</td>
                <td>Live</td>
              </tr>
              <tr>
                <td>Tigers vs Lions</td>
                <td>210/10 (48.4)</td>
                <td>Full Time</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </section>
  </main>
  <footer>
    <div class="container">
      <p>&copy; 2025 SportsZone. All rights reserved.</p>
    </div>
  </footer>
  <script>
    function showTab(evt, tabName) {
      var i, tabcontent, tablinks;
      tabcontent = document.getElementsByClassName("scores-table");
      for (i = 0; i < tabcontent.length; i++) {
        tabcontent[i].style.display = "none";
      }
      tablinks = document.getElementsByClassName("tab");
      for (i = 0; i < tablinks.length; i++) {
        tablinks[i].className = tablinks[i].className.replace(" active", "");
      }
      document.getElementById(tabName).style.display = "block";
      evt.currentTarget.className += " active";
    }
  </script>
</body>
</html>